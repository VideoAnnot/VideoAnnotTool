<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="15dip">


    <TextView
        android:id="@+id/tv_avertissement_enregistrement_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_tv_avertissement_enregistrement_video" />

    <EditText
        android:id="@+id/ed_nom_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_validation_enregistrement_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btnValider"
        android:text="@string/text_btn_validation_enregistrement_video"/>

</LinearLayout>